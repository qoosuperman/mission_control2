<%= form_for mission do |f| %>
  <% if mission.errors.any? %>
    <% mission.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
  <div class= "container">
    <div class= "form-group">
      <%= f.label :title, t("missions.mission_name") %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class= "form-group">
      <%= f.label :priority, t("missions.priority") %>
      <%= f.select(:priority, priority_selection, {}, {class: "form-control"}) %>
    </div>
    <div class= "form-group">
      <%= f.label :category, t("missions.category") %>
      <%= f.select(:category, category_selection, {}, {class: "form-control"}) %>
    </div>
    <div class= "form-group">
      <%= f.label :start_time, t("missions.start_time") %>
      <%= f.date_select :start_time %>
      <%= f.time_select :start_time, :ignore_date => true, class: "form-control" %>
    </div>
    <div class= "form-group">
      <%= f.label :end_time, t("missions.end_time") %>
      <%= f.date_select :end_time %>
      <%= f.time_select :end_time, :ignore_date => true %>
    </div>
    <h3> <%= t("missions.tag") %> </h3>
    <%= f.fields_for :tags do |tag| %>
      <%= render "tag_fields", f: tag %>
    <% end %>
    <div class="links">
      <%= link_to_add_association t("missions.create_tag"), f, :tags, class: "btn btn-primary btn-sm" %>
    </div>
    <%= f.submit t("missions.submit"), data: { disable_with: false }, class: "btn btn-danger" %>
  </div>
<% end %>